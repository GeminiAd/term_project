<h1>Listing Cities</h1>

<%= link_to 'New City', new_city_path %> 
<table border="1">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>State</th>
    <th>Country</th>
    <th>Lat</th>
    <th>Lon</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @cities.each do |city| %>
    <tr>
      <td><%= city.id %></td>
      <td><%= city.name %></td>
      <td><%= city.state %></td>
      <td><%= city.country %></td>
      <td><%= city.lat %></td>
      <td><%= city.lon %></td>
      <td><%= link_to 'Show', city %></td>
      <td><%= link_to 'Edit', edit_city_path(city) %></td>
      <td><%= link_to 'Destroy', city_path(city),
                      method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br />

<%= link_to 'Back', controller: "welcome" %>
